    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Remote",
            "type": "python",
            "request": "launch",
            "program": "${cwd}/src/remote/app.py",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "src/"
            }
        },
        {
            "name": "Sensor",
            "type": "python",
            "request": "launch",
            "program": "${cwd}/src/sensor.py",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "src/"
            }
        },
        {
            "name": "App",
            "type": "python",
            "request": "launch",
            "program": "${cwd}/src/app.py",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "src/"
            }
        }
    ]
}